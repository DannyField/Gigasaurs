<%= form_with model: @band, local: true do |form| %>
<div>
    <%= form.label 'BAND NAME :' %>
    <%= form.text_field :name %>
</div>

<div>
    <%= form.label 'ABOUT :' %>
    <%= form.text_field :about %>
</div>

<div>
    <%= form.label 'WEBSITE :' %>
    <%= form.text_field :website %>
</div>

<div>
    <%= form.label 'UPLOAD BAND IMAGE :' %>
    <%= form.file_field :profile_picture, accept: 'image/png, image/jpeg, image/jpg' %>
</div>

<div>
<%= form.submit %>
</div>
<% end %>
